<p id="notice"><%= notice %></p>

<h1>Listing Matieres</h1>

<table class=" table table-striped" width="1%">
  <thead>
    <tr class="danger">
      <th>Nom</th>
      <th>Note</th>
      <th>Emailprof</th>
      <th>User</th>
      <th>Classroom</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matieres.each do |matiere| %>
      <tr class="warning">
        <td><%= matiere.nom %></td>
        <td><%= matiere.note %></td>
        <td><%= matiere.emailprof %></td>
        <td><%= matiere.user_id %></td>
        <td><%= matiere.classroom.nom %></td>
        <td><%= matiere.student.first_name %></td>
        <td><%= link_to 'Show', matiere,class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_matiere_path(matiere),class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', matiere, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Matiere', new_matiere_path,class: "btn btn-warning" %>
