<%= simple_form_for(@matiere) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :note %>
    <%= f.input :emailprof %>


    <%= f.association :classroom, :label_method => :nom, :value_method => :id, :collection => Classroom.all  %>
    <%= f.association :student, :label_method => :first_name, :value_method => :id, :collection => Student.all  %>

   
  </div>

  <div class="form-actions">
    <%= f.button :submit,class: "btn btn-primary" %>
  </div>
<% end %>
