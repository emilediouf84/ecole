<p id="notice"><%= notice %></p>

<table class=" table table-strapied" width="2%" height="5%">
  <thead>
    <tr class="danger">
      <th>First name</th>
      <th>Last name</th>
      <th>Birth date</th>
      <th>Status</th>
      <th>User</th>
      <th>Classroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class="warning">
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.birth_date %></td>
        <td><%= student.status %></td>
        <td><%= student.user.email %></td>
        <td><%= student.classroom.nom %></td>
        <% if can? :manage ,@classroom%>
        <td><%= link_to 'Show', student,class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_student_path(student),class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

